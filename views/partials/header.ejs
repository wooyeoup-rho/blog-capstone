<header>
    <p class="header-text"><%= post.user_name %></p>
    <form class="search-container">
        <input name="search" placeholder="Search by user or title">
    </form>
    <form class="user-button dropdown" id="user-form" method="post">
        <button type="button">Users</button>
        <div class="dropdown-content">
            <a href="#" data-action="user/create">Create user</a>
            <a href="#" data-action="user/change">Change user</a>
            <a href="#" data-action="user/delete">Delete user</a>
          </div>
    </form>
    <form class="post-button dropdown" id="post-form" method="post">
        <button type="button">Posts</button>
        <div class="dropdown-content">
            <a href="#" data-action="post/create">Create post</a>
            <a href="#" data-action="post/edit">Edit post</a>
            <a href="#" data-action="post/delete">Delete post</a>
          </div>
    </form>
</header>
